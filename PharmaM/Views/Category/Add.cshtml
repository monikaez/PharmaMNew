@model CategoryViewModel


<form asp-action="Add" method="post">

    <div class="p-3 mt-4">
        <div><h1>Add a New Category</h1></div>

        <div class="pt-2">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" type="text" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
      

        <br />
        <button class="btn btn-primary btn-outline-primary btn-light">Create</button>
        <a asp-controller="Category" asp-action="Add" class="btn btn-outline-secondary">Back To List</a>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}