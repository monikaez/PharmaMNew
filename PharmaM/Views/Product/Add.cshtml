@model SingleProductViewModel

<form method="post" enctype="multipart/form-data">
    <div class="p-3 mt-4">
        <div><h1>Add a New Product</h1></div>

        <div class="pt-2">
            <label asp-for="@Model.Id"></label>
            <input asp-for="@Model.Id" type="text" class="form-control" />
            <span asp-validation-for="@Model.Id" class="text-danger"></span>
        </div>

        <div class="pt-2">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" type="text" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div class="pt-2">
            <label asp-for="@Model.Description"></label>
            <input asp-for="@Model.Description" type="text" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>

        <div class="pt-2">
            <label asp-for="@Model.CategoryId"></label>
            <input asp-for="@Model.CategoryId" type="text" class="form-control" />
            <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
        </div>


        <div class="pt-2">
            <label asp-for="@Model.CategoryName"></label>
            <div class="form-control">
                <select name="ProductCategory">
                    <option value="Medicine">Medicines</option>
                    <option value="Supplement">Food supplements</option>
                    <option value="Homeopathy">Homeopathy</option>
                    <option value="Diet">Diet</option>
                    <option value="Cosmetics">Cosmetics</option>
                    <option value="Appliances">Appliances</option>
                </select>
            </div>
            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
        </div>


        <div class="pt-2">
            <label asp-for="@Model.Price"></label>
            <input asp-for="@Model.Price" type="text" class="form-control" />
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>


        <div class="pt-2">
            <label asp-for="@Model.ImagePath"></label>
            <input asp-for="@Model.ImagePath" type="text" class="form-control" />
            <span asp-validation-for="@Model.ImagePath" class="text-danger"></span>
        </div>

        <br />
        <button class="btn btn-primary btn-outline-primary btn-light">Create</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Back To List</a>
    </div>
</form>

