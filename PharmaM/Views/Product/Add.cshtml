@model AddProductViewModel

@{
    ViewBag.Title = "Add Product";
}

<form asp-action="Add" method="post">

    <div class="p-3 mt-4">
        <div><h1>Add a New Product</h1></div>

        <div class="pt-2">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" type="text" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="pt-2">
            <label asp-for="@Model.Price"></label>
            <input asp-for="@Model.Price" type="text" class="form-control" />
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>


        <div class="pt-2">
            <label asp-for="@Model.ImagePath"></label>
            <input asp-for="@Model.ImagePath" type="text" class="form-control" />
            <span asp-validation-for="@Model.ImagePath" class="text-danger"></span>
        </div>

        <div class="pt-2">
            <div class="col-lg-2 col-md-3 col-sm-4">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit"> Select Category </label>
                <input asp-for="@Model.CategoryId" type="text" class="form-control" />
            </div>
           
            <div class="col-lg-10 col-md-9 col-sm-8">
                <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                    <option> -Select category- </option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                     
                </select>
            </div>
           
            <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
        </div>

       @*  <div class="pt-2">
            <label asp-for="@Model.Categories"></label>
            <div class="form-control">
                <select name="ProductCategory">
                    <option value="Medicine">Medicines</option>
                    <option value="Supplement">Food supplements</option>
                    <option value="Homeopathy">Homeopathy</option>
                    <option value="Diet">Diet</option>
                    <option value="Cosmetics">Cosmetics</option>
                    <option value="Appliances">Appliances</option>
                </select>
            </div>
            <span asp-validation-for="@Model.Categories" class="text-danger"></span>
        </div> *@

        <br />
        <button class="btn btn-primary btn-outline-primary btn-light">Create</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Back To List</a>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}